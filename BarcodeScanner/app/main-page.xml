<Page xmlns="http://www.nativescript.org/tns.xsd" loaded="pageLoaded">
  <TabView>
    <TabView.items>
      <TabViewItem title="About">
        <TabViewItem.view>
          <StackLayout cssClass="tab-content">
            <Image margin="10" src="~/res/telerik-logo.png" />
            <Label text="BarcodeScanner plugin demo" cssClass="title"/>
            <Label text="The BarcodeScanner plugin supports extracting data from a large range of barcodes, including QR codes. Your app will receive the type of barcode and the encode value." textWrap="true"/>
          </StackLayout>
        </TabViewItem.view>
      </TabViewItem>
      <TabViewItem title="Demo">
        <TabViewItem.view>
          <ScrollView>
            <StackLayout cssClass="tab-content">
              <Label text="Checking availability" cssClass="title"/>
              <Label text="It can never hurt to check upfront if a device is capable of scanning a barcode." textWrap="true"/>
  			      <Button text="available?" tap="{{ doCheckAvailable }}" cssClass="button" />

              <Label text="Camera permission" cssClass="title"/>
              <Label text="Android 6 requires runtime user consent." textWrap="true"/>
              <Button text="has permission?" tap="{{ doCheckHasCameraPermission }}" cssClass="button" />
              <Button text="request permission" tap="{{ doRequestCameraPermission }}" cssClass="button" />

              <Label text="Scanning" cssClass="title"/>
  			      <Button text="back camera, with flip" tap="{{ doScanWithBackCamera }}" cssClass="button" />
  			      <Button text="front camera, no flip (Android)" tap="{{ doScanWithFrontCamera }}" cssClass="button" />
            </StackLayout>
          </ScrollView>
        </TabViewItem.view>
      </TabViewItem>
    </TabView.items>
  </TabView>
</Page>